<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="purchase_order_form" model="ir.ui.view">
        <field name="name">purchase.order.form</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form" />
        <field name="arch" type="xml">
            <xpath
                expr="//page[@name='products']/field[@name='order_line']/tree/field[@name='analytic_distribution']"
                position="attributes"
            >
                <attribute name="optional">show</attribute>
            </xpath>
            <!-- <xpath
                expr="//page[@name='products']/field[@name='order_line']/tree/field[@name='analytic_distribution']"
                position="after"
            >
                <field
                    name="json_budget_popover"
                    optional="show"
                    nolabel="1"
                    string="Budget Figure"
                    width="10px"
                    widget="popover_widget"
                    attrs="{'invisible': [('analytic_distribution', '=', [])]}"
                    groups="budget_control.group_budget_control_user"
                />
            </xpath> -->
            <xpath
                expr="//page[@name='products']/field[@name='order_line']/tree/field[last()]"
                position="after"
            >
                <field name="auto_adjust_date_commit" optional="hide" />
                <field name="amount_commit" optional="hide" readonly="1" />
                <field
                    name="date_commit"
                    optional="hide"
                    groups="budget_control.group_budget_date_commit"
                    attrs="{'readonly': [('state', '!=', 'draft')]}"
                />
                <field
                    name="fwd_analytic_distribution"
                    widget="analytic_distribution"
                    optional="hide"
                    groups="budget_control.group_budget_control_manager"
                />
                <field
                    name="fwd_date_commit"
                    optional="hide"
                    groups="budget_control.group_budget_control_manager"
                />
            </xpath>
            <xpath expr="/form/sheet/notebook/page[last()]" position="after">
                <page
                    string="Budget Commitment"
                    name="budget_commit"
                    attrs="{'invisible': [('budget_move_ids', '=', [])]}"
                >
                    <div class="oe_right" name="buttons">
                        <button
                            type="object"
                            name="recompute_budget_move"
                            string="Recompute"
                            icon="fa-refresh"
                            groups="budget_control.group_budget_control_manager"
                        />
                        <button
                            type="object"
                            name="close_budget_move"
                            string="Close Budget"
                            icon="fa-times-circle"
                            groups="budget_control.group_budget_control_manager"
                        />
                    </div>
                    <field name="budget_move_ids" readonly="1">
                        <tree>
                            <field name="purchase_line_id" />
                            <field name="move_id" />
                            <field name="date" />
                            <field name="analytic_plan" optional="show" />
                            <field name="analytic_account_id" optional="show" />
                            <field name="write_uid" optional="show" />
                            <field name="write_date" optional="show" />
                            <field name="note" optionl="hide" />
                            <field name="debit" sum="Total Debit" />
                            <field name="credit" sum="Total Credit" />
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
