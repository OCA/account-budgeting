<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record model="ir.ui.view" id="budget_plan_view_tree">
        <field name="name">budget.plan.view.tree</field>
        <field name="model">budget.plan</field>
        <field name="arch" type="xml">
            <tree string="Budget Plan">
                <field name="name"/>
                <field name="budget_id"/>
                <field name="analytic_account_id"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="budget_plan_view_form">
        <field name="name">budget.plan.view.form</field>
        <field name="model">budget.plan</field>
        <field name="arch" type="xml">
            <form string="Budget Plan">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                    </div>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="budget_id"/>
                            <field name="analytic_account_id"/>
                            <field name="plan_date_range_type_id"/>
                        </group>
                        <group>
                            <field name="active"/>
                            <field name="date_range_id"/>
                            <field name="date_from"/>
                            <field name="date_to"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="items" string="Plan">
                            <div class="oe_right oe_button_box" name="buttons">
                                <button name="prepare_budget_plan_matrix" type="object" string="Reset Plan"/>
                            </div>
                            <field name="item_ids" widget="x2many_2d_matrix"
                                field_x_axis="date_range_id"
                                field_y_axis="kpi_expression_id"
                                field_value="amount"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="budget_plan_action">
        <field name="name">Budget Plan</field>
        <field name="view_id" ref="budget_plan_view_tree"/>
        <field name="res_model">budget.plan</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="budget_plan_menu" parent="budget_management_conf_menu" name="Budget Plan" action="budget_plan_action" sequence="20"/>

</odoo>
