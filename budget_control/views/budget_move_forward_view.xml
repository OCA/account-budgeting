<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_budget_move_forward_tree" model="ir.ui.view">
        <field name="name">view.budget.move.forward.tree</field>
        <field name="model">budget.move.forward</field>
        <field name="arch" type="xml">
            <tree string="Budget Carry Forward">
                <field name="name" />
                <field name="to_budget_id" />
                <field
                    name="state"
                    widget="badge"
                    decoration-success="state == 'done'"
                    decoration-info="state == 'draft'"
                />
            </tree>
        </field>
    </record>
    <record id="view_budget_move_forward_line_tree" model="ir.ui.view">
        <field name="name">view.budget.move.forward.line.tree</field>
        <field name="model">budget.move.forward.line</field>
        <field name="arch" type="xml">
            <tree editable="bottom" create="0">
                <field name="analytic_account_id" />
                <field name="method_type" optional="show" />
                <field
                    name="date_extend"
                    optional="show"
                    attrs="{'invisible': [('method_type', '!=', 'extend')]}"
                />
                <field
                    name="to_analytic_account_id"
                    options="{'no_create': 1}"
                    optional="show"
                    attrs="{'invisible': [('method_type', '!=', 'new')]}"
                />
                <field name="document_number" optional="show" />
                <field name="date_commit" />
                <field name="amount_commit" sum="Total Commitment" />
            </tree>
        </field>
    </record>
    <record id="view_budget_move_forward_line_accumulate_tree" model="ir.ui.view">
        <field name="name">view.budget.move.forward.line.accumulate.tree</field>
        <field name="model">budget.move.forward.line.accumulate</field>
        <field name="arch" type="xml">
            <tree editable="bottom" create="0">
                <field name="forward_id" invisible="1" />
                <field name="company_currency_id" invisible="1" />
                <field name="date_from" invisible="1" />
                <field name="date_to" invisible="1" />
                <field name="analytic_account_id" options="{'no_create': 1}" />
                <field name="method_type" optional="show" />
                <field
                    name="date_extend"
                    optional="show"
                    attrs="{'invisible': [('method_type', '!=', 'extend')]}"
                />
                <field
                    name="amount_balance"
                    sum="Total Available"
                    widget="monetary"
                    options="{'currency_field': 'company_currency_id'}"
                />
                <field
                    name="to_analytic_account_id"
                    options="{'no_create': 1}"
                    optional="show"
                    attrs="{'invisible': [('method_type', '!=', 'new')]}"
                    domain="[('bm_date_to', '&gt;=', date_from), ('bm_date_from', '&lt;=', date_to)]"
                />
                <field
                    name="amount_carry_forward"
                    sum="Total Carry Forward"
                    widget="monetary"
                    options="{'currency_field': 'company_currency_id'}"
                />
                <field name="accumulate_analytic_account_id" optional="show" />
                <field
                    name="amount_accumulate"
                    sum="Total Accumulate"
                    widget="monetary"
                    options="{'currency_field': 'company_currency_id'}"
                />
            </tree>
        </field>
    </record>
    <record id="view_budget_move_forward_form" model="ir.ui.view">
        <field name="name">view.budget.move.forward.form</field>
        <field name="model">budget.move.forward</field>
        <field name="arch" type="xml">
            <form string="Budget Carry Forward">
                <header>
                    <button
                        name="action_budget_carry_forward_info"
                        string="Carry Budget Forward"
                        class="btn-primary"
                        type="object"
                        states="draft"
                        context="{'forward_id': id}"
                    />
                    <button
                        name="action_cancel"
                        string="Cancel"
                        type="object"
                        states="draft"
                    />
                    <button
                        type="object"
                        name="action_prepare_new_analytic"
                        string="Prepare carry forward analytic account"
                        states="draft"
                    />
                    <field
                        name="state"
                        widget="statusbar"
                        statusbar_visible="draft,done"
                    />
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only" />
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <p>
                        This operation will change "date" of budget moves, to new budget control period's 1st date.
                        Budget moves, will then commit to the new budget control period.
                    </p>
                    <group>
                        <group>
                            <field name="to_budget_id" />
                            <field name="method_type" widget="radio" />
                            <field name="accumulate_analytic_account_id" />
                        </group>
                        <group>
                            <field name="date_from" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Available" name="available">
                            <div class="oe_read_only oe_right" name="buttons">
                                <button
                                    type="object"
                                    name="action_get_analytic_available"
                                    string="List analytic account"
                                    icon="fa-refresh"
                                    states="draft"
                                />
                            </div>
                            <field name="forward_accumulate_ids" />
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>
    <record id="action_budget_move_forward" model="ir.actions.act_window">
        <field name="name">Budget Carry Forward</field>
        <field name="res_model">budget.move.forward</field>
        <field name="view_id" ref="view_budget_move_forward_tree" />
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem
        id="menu_budget_move_forward"
        parent="budget_control_menu"
        name="Budget Carry Forward"
        action="action_budget_move_forward"
        sequence="50"
    />
</odoo>
