<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="view_budget_move_forward_tree" model="ir.ui.view">
        <field name="name">view.budget.move.forward.tree</field>
        <field name="model">budget.move.forward</field>
        <field name="arch" type="xml">
            <tree string="Budget Carry Forward">
                <field name="name" />
                <field name="to_budget_id" />
                <field
                    name="state"
                    widget='badge'
                    decoration-success="state == 'done'"
                    decoration-info="state != 'done'"
                />
            </tree>
        </field>
    </record>

    <record id="view_budget_move_forward_line_tree" model="ir.ui.view">
        <field name="name">view.budget.move.forward.line.tree</field>
        <field name="model">budget.move.forward.line</field>
        <field name="arch" type="xml">
            <tree editable="bottom" create="0">
                <field name="document_id" />
                <field name="date_commit" />
                <field name="amount_commit" sum="Total Commitment" />
            </tree>
        </field>
    </record>

    <record id="view_budget_move_forward_form" model="ir.ui.view">
        <field name="name">view.budget.move.forward.form</field>
        <field name="model">budget.move.forward</field>
        <field name="arch" type="xml">
            <form string="Budget Carry Forward">
                <header>
                    <button
                        name="action_budget_carry_forward"
                        string="Carry Budget Forward"
                        class="btn-primary"
                        type="object"
                        states="draft"
                        confirm="This operation cannot be undone. Are you sure to continue?"
                    />
                    <button
                        name="action_cancel"
                        string="Cancel"
                        type="object"
                        states="draft"
                    />
                    <field
                        name="state"
                        widget="statusbar"
                        statusbar_visible="draft,done"
                    />
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only" />
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <p>
                        This operation will change "date" of budget moves, to new budget control period's 1st date.
                        Budget moves, will then commit to the new budget control period.
                    </p>
                    <group>
                        <group>
                            <field name="to_budget_id" />
                        </group>
                        <group>
                            <field name="date_budget_move" />
                        </group>
                    </group>
                    <notebook />
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>

    <record id="action_budget_move_forward" model="ir.actions.act_window">
        <field name="name">Budget Carry Forward</field>
        <field name="res_model">budget.move.forward</field>
        <field name="view_id" ref="view_budget_move_forward_tree" />
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="menu_budget_move_forward"
        parent="budget_budget_menu"
        name="Budget Carry Forward"
        action="action_budget_move_forward"
        sequence="100"
    />

</odoo>
