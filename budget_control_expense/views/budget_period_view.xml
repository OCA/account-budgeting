<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="budget_period_view_form" model="ir.ui.view">
        <field name="name">budget.period.view.form</field>
        <field name="model">budget.period</field>
        <field name="inherit_id" ref="budget_control.budget_period_view_form" />
        <field name="arch" type="xml">
            <div name="account" position="after">
                <label for="expense" invisible="1" />
                <div name="expense" class="o_row">
                    <field name="expense" />
                    <span>On Expense</span>
                </div>
            </div>
        </field>
    </record>
</odoo>
